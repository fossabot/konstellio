{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Watch @konstellio/server*",
			"isBackground": true,
			"dependsOn": [
				"Watch @konstellio/server",
				"Watch @konstellio/plugin-user"
			],
			"problemMatcher": [
				"$tsc-watch"
			]
		},
		{
			"label": "Watch @konstellio/server",
			"type": "typescript",
			"tsconfig": "packages\\konstellio\\server\\tsconfig.json",
			"option": "watch",
			"isBackground": true,
			"problemMatcher": [
				{
					"base": "$tsc-watch",
					"fileLocation": [
						"relative",
						"${workspaceFolder}/packages/konstellio/server/"
					]
				}
			]
		},
		{
			"label": "Watch @konstellio/plugin-user",
			"type": "typescript",
			"tsconfig": "packages\\konstellio\\plugin-user\\tsconfig.json",
			"option": "watch",
			"isBackground": true,
			"problemMatcher": [
				{
					"base": "$tsc-watch",
					"fileLocation": [
						"relative",
						"${workspaceFolder}/packages/konstellio/plugin-user/"
					]
				}
			]
		}
	]
}