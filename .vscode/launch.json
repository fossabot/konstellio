	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch examples/blog",
			"preLaunchTask": "compile-konstellio-server",
			"program": "${workspaceFolder}/packages/examples/blog/index.js"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Test @konstellio/db-sqlite",
			"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
			"args": [
				"-u",
				"tdd",
				"--timeout",
				"999999",
				"--colors",
				"--require",
				"ts-node/register",
				"--full-trace",
				"${workspaceFolder}/packages/konstellio/db-sqlite/src/**/*.spec.ts"
			],
			"internalConsoleOptions": "openOnSessionStart"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Test @konstellio/server",
			"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
			"args": [
				"-u",
				"tdd",
				"--timeout",
				"999999",
				"--colors",
				"--require",
				"ts-node/register",
				"--full-trace",
				"${workspaceFolder}/packages/konstellio/server/src/**/*.spec.ts"
			],
			"internalConsoleOptions": "openOnSessionStart"
		}
	]
}